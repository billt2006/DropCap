#!/bin/bash

SRC_DIR="."
NAME="DropCap"
PLATFORM="darwin"
ARCH="x64"
ELECTRON_VERSION="0.30.2"
OUT_DIR="./release"
ICON="icon.icns"
BUNDLE_ID="git.dstreet.dropcap"
IGNORE="./bin"

echo "==> Building release package"
./node_modules/.bin/electron-packager $SRC_DIR $NAME --platform=$PLATFORM --arch=$ARCH --version=$ELECTRON_VERSION --out="$OUT_DIR" --icon="$ICON" --app-bundle-id="$BUNDLE_ID" --asar --overwrite